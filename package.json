{
  "name": "raylens",
  "version": "0.1.0",
  "private": true,
  "description": "Reactive analytics and dashboarding runtime for Rayforce",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "dev:frontend": "npm run dev --workspace=apps/dashboard",
    "build:frontend": "npm run build --workspace=apps/dashboard",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint packages apps --ext .ts,.tsx"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
